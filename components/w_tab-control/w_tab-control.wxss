/* components/w_tab-control/w_tab-control.wxss */

.tab-control {
  background-color: #fff;
    display: flex;
    margin-bottom: 16rpx;
    /* margin-top:16rpx;  */
    padding-bottom: 10rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.active {
  color: #ff5777;
}

.tab-item.active text {
  padding: 16rpx 10rpx;
  border-bottom: 6rpx solid #ff5777;
}